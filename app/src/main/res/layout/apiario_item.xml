<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        android:layout_margin="2dp"
        app:cardBackgroundColor="@color/colorBlue"
        app:cardCornerRadius="12dp"
        app:contentPadding="3dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewestablecimiento"
                android:textColor="@color/colorBlue"
                android:textSize="15sp"
                android:background="@color/colororange"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                >

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewdireccion"
                android:textColor="@color/colorBlue"
                android:textSize="15sp"
                android:background="@color/colororange"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                >

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewnumero_de_colmenas"
                android:textColor="@color/colorBlue"
                android:textSize="15sp"
                android:background="@color/colororange"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                >

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colororange"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/textViewfecha_de_la_visita"
                    android:layout_width="312sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlue"
                    android:textSize="15sp"
                    android:background="@color/colororange"
                    />

                <ImageButton
                    android:id="@+id/imageButtonDelete"
                    android:layout_width="18sp"
                    android:layout_height="21sp"
                    android:background="@color/colororange"
                    android:src="@drawable/ic_baseline_delete_forever_24"
                     />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewtrabajo"
                android:textColor="@color/colorBlue"
                android:textSize="15sp"
                android:background="@color/colororange"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                >

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewproxima"
                android:textColor="@color/colorBlue"
                android:textSize="15sp"
                android:background="@color/colororange"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                >

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewgps"
                android:textColor="@color/colorBlue"
                android:textSize="15sp"
                android:background="@color/colororange"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                >

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewobservaciones"
                android:textColor="@color/colorBlue"
                android:textSize="15sp"
                android:background="@color/colororange"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                >

            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>